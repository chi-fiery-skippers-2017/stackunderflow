<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    normalize.css removes cross-browser differences in defaults, e.g.,
    differences in how form elements appear between Firefox and IE
    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/css/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="/css/application.css">
  <link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/js/application.js"></script>


  <title>StackUnderflow</title>
</head>

  <body>
  <h1>StackUnderflow</h1>
  <%= erb :'_errors', layout: false %>
  <a href="/questions/new" class="ask-question">Ask Question</a>
    
  <!-- Need logged_id helper method -->
  <% if logged_in? %>
  <nav style="padding-top: -1;">
    <ul>
      <li><a class="active" href="#home">StackUnderflow</a></li>
      <li><a href="/users/<%=current_user.id%>"> <%= current_user.username %> </a></li> 
      <form action="/sessions/logout" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Logout">
      </form>  
      <li><a href="/users/<%=current_user%>"></a><a href="/">Home</a></li>
    </ul>
      <div class="slogan">
      <p>Stack Underflow Business Solutions: Get Under!</p>
    </div>
    <% else %>
    <ul>
      <li><a class="active" href="/home">StackUnderflow</a></li>
      <li><a href="/sessions/login">Login</a></li>
      <li><a href="/users/new">Register</a></li>
      <li><a href="/">Home</a></li>
      <form class="navbar-search pull-right" action="">
        <input type="text" class="search-query span2" placeholder="Search">
      </form>
    </nav>
  </ul>


  <div class="register_bg">
      <h2 class="user-registration">Please register below and to check out the underflow...</h2>
    <div class="frontpage-login-form">
      <div class="front-form">
        <form action="/users" method="POST">
          <label for="username">Username:</label>
          <input id="username" name="user[username]" type="text"><br>
          <label for="user-email">Email Address:</label>
          <input id="user-email" name="user[email]" type="email"><br>
          <label for="user-password">Password:</label>
          <input id="user-password" name="user[password]" type="password"><br>
          <input type="submit" value="Create Account" class="button">
        </form>
      </div>
    </div>
  </div>
      <div class="slogan">
      <p>Stack Underflow Business Solutions: Get Under!</p>
    </div>
      <% end %>
  <%= yield %>
</body>
</html>
