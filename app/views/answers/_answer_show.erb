<div class="answer">
  <div class="votes">
    <a href="/votes/up">up</a>
    <strong><%= answer.votes.count %></strong>
    <a href="/votes/down">down</a>
  </div>

  <p><%= answer.body %></p>
  <p><%= answer.author.username %></p>

  <div> <% answer.comments.each do |comment|%>
    <p class="comment"> <%= comment.body %></p>
    <% end  %>
  </div>
</div>
